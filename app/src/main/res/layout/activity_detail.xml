<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#000"
  android:fitsSystemWindows="false">
  
  <com.radleymarx.imagegallerydemo.ui.detail.HackyViewPager
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
  
  <LinearLayout
    android:id="@+id/bottom_menu"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_alignParentBottom="true"
    android:background="@color/detailPrimary"
    android:orientation="horizontal">
    
    <Space
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_weight="1" />
    
    <android.support.v7.widget.AppCompatImageButton
      android:id="@+id/plus_one_btn"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="@dimen/detail_menu_btn_width"
      android:layout_height="match_parent"
      android:src="@drawable/ic_plus_one_black_24dp"
      android:tint="@color/colorPrimary" />
    
    <android.support.v7.widget.AppCompatImageButton
      android:id="@+id/comment_btn"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="@dimen/detail_menu_btn_width"
      android:layout_height="match_parent"
      android:src="@drawable/ic_chat_black_24dp"
      android:tint="@color/colorPrimary" />
    
    <android.support.v7.widget.AppCompatImageButton
      android:id="@+id/add_btn"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="@dimen/detail_menu_btn_width"
      android:layout_height="match_parent"
      android:src="@drawable/ic_add_black_24dp"
      android:tint="@color/colorPrimary" />
    
    <android.support.v7.widget.AppCompatImageButton
      android:id="@+id/share_btn"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="@dimen/detail_menu_btn_width"
      android:layout_height="match_parent"
      android:src="@drawable/ic_forward_custom_24px"
      android:tint="@color/colorPrimaryLight" />
    
    <Space
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_weight="1" />
  </LinearLayout>

</RelativeLayout>


