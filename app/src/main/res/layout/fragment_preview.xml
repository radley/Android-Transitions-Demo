<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/transparent"
	tools:context=".MainActivity">
	
	<android.support.design.widget.AppBarLayout
		android:id="@+id/appBar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay">
		
		<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:popupTheme="@style/AppTheme.PopupOverlay"
			app:navigationIcon="?attr/homeAsUpIndicator"/>
	
	</android.support.design.widget.AppBarLayout>
	
	<FrameLayout
		android:id="@+id/bg_color"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="invisible"
		android:background="@android:color/black" />
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">
		
		<!--com.andremion.louvre.util.HackyViewPager-->
		<android.support.v4.view.ViewPager
			android:id="@+id/view_pager"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_above="@+id/menu"
			android:layout_weight="1"/>
		
		<LinearLayout
			android:id="@+id/menu"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:layout_weight="0"
			android:background="@color/detailPrimary"
			android:elevation="4dp"
			android:orientation="horizontal"
			android:weightSum="1">
			
			<android.support.v7.widget.AppCompatImageButton
				android:id="@+id/plus_one_btn"
				style="@style/Widget.AppCompat.Button.Borderless"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="0.25"
				android:src="@drawable/ic_plus_one_black_24dp"
				android:tint="@color/colorPrimary" />
			
			<android.support.v7.widget.AppCompatImageButton
				android:id="@+id/comment_btn"
				style="@style/Widget.AppCompat.Button.Borderless"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="0.25"
				android:src="@drawable/ic_chat_black_24dp"
				android:tint="@color/colorPrimary" />
			
			<android.support.v7.widget.AppCompatImageButton
				android:id="@+id/add_btn"
				style="@style/Widget.AppCompat.Button.Borderless"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="0.25"
				android:src="@drawable/ic_add_black_24dp"
				android:tint="@color/colorPrimary" />
			
			<android.support.v7.widget.AppCompatImageButton
				android:id="@+id/share_btn"
				style="@style/Widget.AppCompat.Button.Borderless"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="0.25"
				android:src="@drawable/ic_forward_custom_24px"
				android:tint="@color/colorPrimary" />
		
		</LinearLayout>
	
	
	</LinearLayout>


</android.support.design.widget.CoordinatorLayout>

